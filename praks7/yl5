#!/bin/bash
# Skript kuvab kolmnurga, kus vasakul on 'o' ja paremal tärnid
# Kontrollib, et sisend oleks täisarv

read -p "Sisesta ridade arv: " n

# Kontroll: kas sisestati ainult täisarv
if ! [[ $n =~ ^[0-9]+$ ]]; then
    echo "VIGA: Palun sisesta ainult täisarv!"
    exit 1
fi

# Kontroll: vähemalt 1 rida
if [[ $n -lt 1 ]]; then
    echo "VIGA: Ridade arv peab olema vähemalt 1!"
    exit 1
fi

# Joonistame kujundi
for ((i=1; i<=n; i++)); do
    for ((j=1; j<=n; j++)); do
        if (( j <= n - i )); then
            echo -n "o "
        else
            echo -n "* "
        fi
    done
    echo ""
done

